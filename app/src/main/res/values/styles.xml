<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipTextAppearance">
        <![CDATA[<style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">     <item name="android:textColor">@android:color/white</item> </style>]]></style>

    <style name="MyTabLayout" parent="TextAppearance.Design.Tab">
        <!-- Change the background color here -->
        <item name="tabTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="tabBackground">@color/widgets_background</item>
        <item name="backgroundTint">@color/widgets_background</item>
        <item name="textAllCaps">false</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="tabSelectedTextColor">@color/theme_Blue</item>
        <item name="tabIndicatorColor">@color/theme_Blue</item>

        <item name="tabRippleColor">@color/widgets_background</item>

    </style>



    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the text size -->
        <item name="android:textSize">@dimen/_12sdp</item>

        <!-- Customize the font family -->
        <item name="android:fontFamily">@font/outfit_light</item>
    </style>




</resources>