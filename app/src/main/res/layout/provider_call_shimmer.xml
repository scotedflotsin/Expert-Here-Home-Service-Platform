<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/callHistroryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/circular_grey">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_bg"
                    android:ellipsize="end"
                    android:fontFamily="@font/mukta_vaani_semi_bold"
                    android:maxLines="1"
                    android:orientation="horizontal"
                    android:text="USER NAME"
                    android:textColor="@color/shimmer_bg"
                    android:textSize="@dimen/_13sdp">

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/istok_web_reg"
                    android:textAlignment="textEnd"
                    android:textColor="@color/redBtnTxtColor"
                    android:textSize="@dimen/_9sdp">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:src="@drawable/green_arrow_down"
                    android:visibility="gone">

                </ImageView>

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@color/shimmer_bg"
                    android:visibility="visible"
                    app:tint="@color/shimmer_bg">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/istok_web_reg"
                    android:text="                                    "
                    android:textSize="@dimen/_8sdp">

                </TextView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>