<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_110sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_8sdp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/itemClickService"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:background="@color/widgets_background"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/serviceImage"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_115sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_rounder_transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/start_rating_icon"
                    app:tint="@color/yellow_600">

                </ImageView>

                <TextView
                    android:id="@+id/reviewTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:text="4.5 (5)"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp">

                </TextView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/titleTxt"
            android:fontFamily="@font/outfit_light"
            android:textSize="@dimen/_12sdp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:padding="@dimen/_3sdp"
            android:text="Washing machine repair and electric marepair and electric marepair and electric ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/displayPriceTxt"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:paddingBottom="@dimen/_2sdp"
                android:text="$ 80"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/cutPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@drawable/strike_line"
                android:fontFamily="@font/outfit_light"
                android:paddingStart="3sp"
                android:textColor="@color/grey_white_text_color"

                android:paddingEnd="3sp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="$ 180"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/outfit_light"
                android:text="1 Person"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_light"
                android:text=" | "

                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_light"
                android:text="120 min"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>



    </LinearLayout>




</androidx.cardview.widget.CardView>