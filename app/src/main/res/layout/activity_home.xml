<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"

    >


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_45sdp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </LinearLayout>



        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/bottom_navigation_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/main_screen_bg_color"
            app:backgroundTint="@color/main_screen_bg_color"
            android:backgroundTint="@color/main_screen_bg_color"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_item_color_selector"
            app:itemTextColor="@color/bottom_nav_item_color_selector"
            app:menu="@menu/bottom_menu_user" />
    </androidx.constraintlayout.widget.ConstraintLayout>
