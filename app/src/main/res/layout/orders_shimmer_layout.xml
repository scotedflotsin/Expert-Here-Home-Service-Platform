<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:background="@color/widgets_background"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_weight="1"
                android:background="@color/shimmer_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oxygen_regular"
                android:layout_marginStart="@dimen/_3sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Festival lights installations"
                android:textColor="@color/shimmer_bg"
                android:textSize="@dimen/_10sdp">

            </TextView>

            <ImageView
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"

                android:layout_width="@dimen/_18sdp"
                android:background="@color/shimmer_bg"
                android:layout_height="@dimen/_18sdp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta_vaani_semi_bold"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"

            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:ellipsize="end"
            android:text="Customer Name"
            android:background="@color/shimmer_bg"
            android:textColor="@color/shimmer_bg"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_below="@+id/toolbarnewservice"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/shimmer_bg"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_3sdp"
            android:orientation="horizontal">







        </LinearLayout>

    </LinearLayout>





</LinearLayout>