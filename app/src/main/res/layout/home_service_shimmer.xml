<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemClickService"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_8sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/widgets_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_8sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_115sdp"
                android:background="@color/shimmer_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/shimmer_bg" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/shimmer_bg"
            android:ellipsize="end"
            android:fontFamily="@font/outfit_light"
            android:lines="1"
            android:text="Washing machine repair and electric marepair and electric marepair and electric ma"
            android:textColor="@color/shimmer_bg"
            android:textSize="@dimen/_7sdp">

        </TextView>

        <LinearLayout
            android:background="@color/shimmer_bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center|start"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/displayPriceTxt"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:paddingBottom="@dimen/_2sdp"
                android:text="$ 80"
                android:textColor="@color/shimmer_bg"

                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/cutPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@drawable/strike_line"
                android:fontFamily="@font/outfit_light"
                android:paddingStart="3sp"
                android:paddingEnd="3sp"

                android:paddingBottom="@dimen/_2sdp"
                android:text="$ 180"
                android:textColor="@color/shimmer_bg"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center|start"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/shimmer_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/outfit_light"
                android:text="1 Person"
                android:textColor="@color/shimmer_bg"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_light"
                android:text=" | "
                android:textColor="@color/shimmer_bg"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_light"
                android:maxLines="1"
                android:text="120 min"
                android:textColor="@color/shimmer_bg"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>