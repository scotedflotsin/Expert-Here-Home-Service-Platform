<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:gravity="center"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="horizontal">

    <!-- Existing layout -->
    <LinearLayout
        android:id="@+id/cat_click_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/main_screen_bg_color"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/catImg"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:src="@drawable/demo_cat" />

        <TextView
            android:id="@+id/catTxt"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit"
            android:text="Category Name" />

    </LinearLayout>
    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="match_parent"
        android:background="@drawable/custom_progress"
        android:orientation="horizontal"
        android:backgroundTint="@color/theme_Blue"
        android:visibility="visible">

        <!-- Add your bottom bar items here -->

    </LinearLayout>


</LinearLayout>
