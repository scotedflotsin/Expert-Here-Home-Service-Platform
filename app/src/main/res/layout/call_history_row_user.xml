<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/callHistroryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/widgets_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">


    <LinearLayout

        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/displayImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/app_icon">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView

                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/mukta_vaani_semi_bold"
                android:maxLines="1"
                android:text="USER NAME"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <TextView
                android:id="@+id/receivedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/istok_web_reg"
                android:text="Not Received"
                android:textAlignment="textEnd"
                android:textColor="@color/redBtnTxtColor"
                android:textSize="@dimen/_9sdp">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/greenArrow"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/green_arrow_down"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:id="@+id/redArrow"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/green_arrow_down"
                android:visibility="gone"
                app:tint="@color/redBtnTxtColor">

            </ImageView>

            <ImageView
                android:id="@+id/greenArrowOut"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:rotation="180"
                android:src="@drawable/green_arrow_down"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:id="@+id/redArrowOut"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:rotation="180"
                android:src="@drawable/green_arrow_down"
                android:visibility="gone"
                app:tint="@color/redBtnTxtColor">

            </ImageView>

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/istok_web_reg"
                android:text="8 January, 8:00 pm"
                android:textSize="@dimen/_8sdp">

            </TextView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@color/black">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go_icon">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/istok_web_reg"
                android:text="@string/view"
                android:textColor="@color/grey_white_text_color"
                android:textSize="@dimen/_8sdp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/progressView"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

           <ProgressBar

               android:layout_width="@dimen/_15sdp"
               android:layout_height="@dimen/_15sdp">

           </ProgressBar>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>