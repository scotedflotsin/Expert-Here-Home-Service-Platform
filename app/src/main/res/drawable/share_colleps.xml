<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#77D9D9D9" />
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->

            <padding

                android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:top="@dimen/_5sdp"

                ></padding>

        </shape>
    </item>

    <!-- Your existing vector drawable -->
    <item android:drawable="@drawable/share_black" />
</layer-list>
